# Backend Environment Variables Template
# Copy this file to .env and fill in your values

# Database Configuration
DB_URL=jdbc:mysql://localhost:3306/cargorent
DB_USERNAME=root
DB_PASSWORD=your_database_password_here

# JWT Configuration
# IMPORTANT: Generate a strong random secret key
# Generate using: openssl rand -base64 32
JWT_SECRET=generate-a-secure-random-secret-here-minimum-32-characters
JWT_ACCESS_EXPIRY=900000
JWT_REFRESH_EXPIRY=2592000000

# Server Configuration
SERVER_PORT=8080

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000
