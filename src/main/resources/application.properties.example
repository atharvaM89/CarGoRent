spring.application.name=cargorent

# Database Configuration
# Required: Set these environment variables before running the application
spring.datasource.url=${DB_URL}
spring.datasource.username=${DB_USERNAME}
spring.datasource.password=${DB_PASSWORD}

# Example values:
# DB_URL=jdbc:mysql://localhost:3306/cargorent
# DB_USERNAME=root
# DB_PASSWORD=your_secure_password

# JPA/Hibernate
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.open-in-view=false
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect

# Server
server.port=${SERVER_PORT:8080}

# JWT Configuration
# IMPORTANT: Generate a strong random secret key (minimum 256 bits / 32 characters)
# You can generate one using: openssl rand -base64 32
jwt.secret=${JWT_SECRET}
jwt.access-token-expiry-ms=${JWT_ACCESS_EXPIRY:900000}
jwt.refresh-token-expiry-ms=${JWT_REFRESH_EXPIRY:2592000000}

# Example:
# JWT_SECRET=your-super-secret-key-here-minimum-32-characters-long
# JWT_ACCESS_EXPIRY=900000 (15 minutes in milliseconds)
# JWT_REFRESH_EXPIRY=2592000000 (30 days in milliseconds)

# CORS Configuration
cors.allowed-origins=${CORS_ALLOWED_ORIGINS:http://localhost:3000}

# Example:
# CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
